<%- include('../partials/header.ejs') %>
	
	<h2>events</h2>
	<%= message %>


	<div class="cardGrid">

		<% events.forEach(event => { %>
			
			<div class="indexInfo">
	
				<div class="indexName">
					<a href="/events/<%=event.id%>"><%=event.name%></a>
				</div>

				<div class="photoCard">	
					<a href="/events/<%=event.id%>"><img class="indexPhoto" src="<%= event.eventPhoto %>"></a>
				</div>
				
			</div>
		
		<% }) %>
	
	</div>


<%- include('../partials/footer.ejs') %>

